<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:orientation="vertical"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
		>
	<!-- Title TextView -->
	<TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center"
			  android:textSize="30sp" android:layout_margin="10dp"
			  android:text="@string/titleStatus"
			/>
	<!-- Status EditText -->
	<EditText android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"
			  android:hint="@string/hintText" android:id="@+id/editText" android:gravity="top|center_horizontal"
			/>
	<!-- Update Button -->
	<Button android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/buttonUpdate"
			android:textSize="20sp" android:id="@+id/buttonUpdate"
			/>
</LinearLayout>

